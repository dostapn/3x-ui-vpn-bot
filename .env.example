# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
ADMIN_ID=your_telegram_id

# 3x-ui API Configuration (внутренний адрес для бота)
# ВАЖНО: XUI_HOST должен включать протокол (http:// или https://)
# Примеры:
#   Docker:         http://xui:8443/dostapn-3x-ui/
#   Продакшн HTTP:  http://127.0.0.1:2053
#   Продакшн HTTPS: https://localhost:8443/dostapn-3x-ui/
XUI_HOST=http://xui:8443/dostapn-3x-ui/
XUI_USERNAME=admin
XUI_PASSWORD=admin

# SSL Certificate Verification
# Установите false для самоподписанных сертификатов (self-signed)
# true  = проверять сертификат (рекомендуется для продакшн с валидным SSL)
# false = не проверять (для dev или самоподписанных сертификатов)
XUI_USE_SSL_CERT=true

# Server Configuration (публичный адрес для клиентов)
# DOMAIN должен быть публичным доменом или IP вашего сервера
DOMAIN=localhost
SUBSCRIPTION_PORT=2096

# Database Path
# По умолчанию для 3x-ui: /etc/x-ui/x-ui.db
# В Docker: /app/data/x-ui.db
DB_PATH=/app/data/x-ui.db

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
